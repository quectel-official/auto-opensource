+static int __connman_inet_set_ifhwaddr(int index)
+{
+	struct ifreq ifr;
+	int sk, err;
+	FILE *fp = NULL;
+	char cmd[128], mac[128];
+
+	/* This is for ethernet mac writer. */
+
+	memset(cmd, 0, sizeof(cmd));
+	memset(mac, 0, sizeof(mac));
+
+	sk = socket(PF_INET, SOCK_DGRAM | SOCK_CLOEXEC, 0);
+	if (sk < 0) {
+		DBG("socket error\n");
+		return -errno;
+	}
+
+	memset(&ifr, 0, sizeof(ifr));
+	ifr.ifr_ifindex = index;
+
+	err = ioctl(sk, SIOCGIFNAME, &ifr);
+	if (err < 0) {
+		DBG("Get interface name error");
+		goto done;
+	}
+
+	DBG("Get interface name=%s\n", ifr.ifr_name);
+
+	sprintf(cmd, "cat /mnt/vendor/nvcfg/mac/%s", ifr.ifr_name);
+
+	fp = popen(cmd, "r");
+	if (fp != NULL)
+	{
+		if (fgets(mac, 128, fp) != NULL)
+		{
+			DBG("Read old mac=%02x:%02x:%02x:%02x:%02x:%02x\n",
+				ifr.ifr_hwaddr.sa_data[0],
+				ifr.ifr_hwaddr.sa_data[1],
+				ifr.ifr_hwaddr.sa_data[2],
+				ifr.ifr_hwaddr.sa_data[3],
+				ifr.ifr_hwaddr.sa_data[4],
+				ifr.ifr_hwaddr.sa_data[5]);
+
+			err = ioctl(sk, SIOCGIFHWADDR, &ifr);
+			if (err < 0) {
+				DBG("Get interface hwaddr error\n");
+				goto done;
+			}
+
+			DBG("Write new mac=%s\n", mac);
+
+			sscanf(mac, "%02x:%02x:%02x:%02x:%02x:%02x",
+			       &ifr.ifr_hwaddr.sa_data[0],
+			       &ifr.ifr_hwaddr.sa_data[1],
+			       &ifr.ifr_hwaddr.sa_data[2],
+			       &ifr.ifr_hwaddr.sa_data[3],
+			       &ifr.ifr_hwaddr.sa_data[4],
+			       &ifr.ifr_hwaddr.sa_data[5]);
+
+			err = ioctl(sk, SIOCSIFHWADDR, &ifr);
+			if (err < 0) {
+				DBG("Set interface hwaddr error\n");
+				goto done;
+			}
+		}
+
+		pclose(fp);
+	}
+
+	err = 0;
+
+done:
+	close(sk);
+
+	DBG("err=%d\n", err);
+
+	return err;
+}
